<div class="contact-form">
  <%= form_for request, :html => { multipart: true } do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :message %>
    <%= f.text_area :message %>
    <br>
    <br>
    <%= f.submit "Holla atcha boyz!", class: "button"%>
  <% end %>
</div>
